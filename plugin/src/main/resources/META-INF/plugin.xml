<idea-plugin>
	<id>gdscript</id>
	<name>GDScript</name>
	<version>0.1</version>
	<vendor>Jakub BÅ‚ach</vendor>
	<idea-version since-build="192"/> <!-- version 2019.2 -->
	<depends>com.intellij.modules.lang</depends>
	<description><![CDATA[
		<p>Godot Engine GDScript language support</p>
 		<p>Features:</p>
		<ul>
			<li>Syntax highlighting</li>
			<li>Code completion</li>
		</ul>
		<p>Source code: <a href="https://github.com/exigow/intellij-gdscript">github.com/exigow/intellij-gdscript</a></p>
    ]]></description>
	<extensions defaultExtensionNs="com.intellij">
		<!-- config files -->
		<colorSettingsPage implementation="config.ConfigColorSettingsPage"/>
		<lang.commenter implementationClass="config.ConfigCommenter" language="Godot Config"/>
		<fileType implementationClass="config.ConfigFileType" extensions="cfg" name="Godot CFG file" language="Godot Config"/>
		<fileType implementationClass="config.ConfigFileType" extensions="import" name="Godot IMPORT file" language="Godot Config"/>
		<fileType implementationClass="config.ConfigFileType" extensions="tres" name="Godot TRES file" language="Godot Config"/>
		<fileType implementationClass="config.ConfigFileType" extensions="godot" name="Godot PROJECT file" language="Godot Config"/>
		<lang.syntaxHighlighterFactory implementationClass="config.ConfigHighlighterFactory" language="Godot Config"/>
		<lang.parserDefinition implementationClass="config.ConfigParserDefinition" language="Godot Config"/>
		<!-- script files -->
		<annotator implementationClass="script.annotator.BuiltInFunctionAnnotator" language="Godot GDScript"/>
		<annotator implementationClass="script.annotator.ConstantAnnotator" language="Godot GDScript"/>
		<annotator implementationClass="script.annotator.FunctionAnnotator" language="Godot GDScript"/>
		<annotator implementationClass="script.annotator.TypeAnnotator" language="Godot GDScript"/>
		<completion.contributor implementationClass="script.completion.BuiltInFunctionCompletionContributor" language="Godot GDScript"/>
		<completion.contributor implementationClass="script.completion.KeywordCompletionContributor" language="Godot GDScript"/>
		<completion.contributor implementationClass="script.completion.LiteralCompletionContributor" language="Godot GDScript"/>
		<completion.contributor implementationClass="script.completion.TypeCompletionContributor" language="Godot GDScript"/>
		<colorSettingsPage implementation="script.ScriptColorSettingsPage"/>
		<lang.commenter implementationClass="script.ScriptCommenter" language="Godot GDScript"/>
		<fileType implementationClass="script.ScriptFileType" extensions="gd" name="Godot GDScript file" language="Godot GDScript"/>
		<lang.syntaxHighlighterFactory implementationClass="script.ScriptHighlighterFactory" language="Godot GDScript"/>
		<lang.parserDefinition implementationClass="script.ScriptParserDefinition" language="Godot GDScript"/>
		<additionalTextAttributes scheme="Darcula" file="colorSchemes/GodotScript.xml"/>
		<additionalTextAttributes scheme="Default" file="colorSchemes/GodotScript.xml"/>
	</extensions>
</idea-plugin>
