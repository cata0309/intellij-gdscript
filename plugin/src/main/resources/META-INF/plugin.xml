<idea-plugin>
	<id>gdscript</id>
	<name>Godot GDScript</name>
	<version>0.14</version>
	<vendor>Jakub BÅ‚ach</vendor>
	<description><![CDATA[
		<p>Adds support for the Godot GDScript language.</p>
		<p><a href="https://github.com/exigow/intellij-gdscript">GitHub</a></p>
    ]]></description>
	<depends>com.intellij.modules.lang</depends>
	<extensions defaultExtensionNs="com.intellij">
		<lang.parserDefinition implementationClass="gdscript.lang.ScriptParserDefinition" language="GDScript"/>
		<lang.parserDefinition implementationClass="gdscript.lang.ResourceParserDefinition" language="GDScript resource"/>
		<lang.syntaxHighlighterFactory implementationClass="gdscript.files.ScriptHighlighterFactory" language="GDScript"/>
		<lang.syntaxHighlighterFactory implementationClass="gdscript.files.ResourceHighlighterFactory" language="GDScript resource"/>
		<completion.contributor implementationClass="gdscript.completion.ScriptCompletionContributor" language="GDScript"/>
		<annotator implementationClass="gdscript.annotation.ScriptAnnotator" language="GDScript"/>
		<lang.braceMatcher implementationClass="gdscript.typing.BraceMatcher" language="GDScript"/>
		<lang.quoteHandler implementationClass="gdscript.typing.QuoteHandler" language="GDScript"/>
		<lang.commenter implementationClass="gdscript.commenter.ScriptCommenter" language="GDScript"/>
		<colorSettingsPage implementation="gdscript.options.ColorSettingsPage"/>
		<fileType implementationClass="gdscript.files.ScriptFileType" extensions="gd" name="Godot GDScript file" language="GDScript"/>
		<fileType implementationClass="gdscript.files.ResourceFileType" extensions="godot" name="Project file" language="GDScript resource"/>
		<fileType implementationClass="gdscript.files.ResourceFileType" extensions="import" name="Import file" language="GDScript resource"/>
		<fileType implementationClass="gdscript.files.ResourceFileType" extensions="cfg" name="Configuration file" language="GDScript resource"/>
		<fileType implementationClass="gdscript.files.ResourceFileType" extensions="tres" name="Text resource file" language="GDScript resource"/>
		<fileType implementationClass="gdscript.files.ResourceFileType" extensions="tscn" name="Text scene file" language="GDScript resource"/>
		<additionalTextAttributes scheme="Default" file="colorSchemes/GDScript.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colorSchemes/GDScript.xml"/>
	</extensions>
</idea-plugin>
